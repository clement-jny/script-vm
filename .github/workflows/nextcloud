name: Déploiement Nextcloud

on:
  push:
    branches: [ main ]

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
    - name: Cloner le dépôt
      uses: actions/checkout@v2

    - name: Installer SSH
      run: sudo apt-get install openssh-client

    - name: Déployer le script
      run: ssh user@ip_address 'bash -s' < deploy-nextcloud.sh
      env:
        SSH_PRIVATE_KEY: ${{ secrets.SSH_PRIVATE_KEY }}
